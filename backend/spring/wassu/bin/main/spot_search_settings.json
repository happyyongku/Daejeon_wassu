{
  "analysis": {
    "tokenizer": {
      "nori_tokenizer": {
        "type": "nori_tokenizer",
        "decompound_mode": "mixed"
      }
    },
    "filter": {
      "nori_readingform": {
        "type": "nori_readingform"
      },
      "lowercase_filter": {
        "type": "lowercase"
      },
      "edge_ngram_filter": {
        "type": "edge_ngram",
        "min_gram": 2,
        "max_gram": 10
      }
    },
    "analyzer": {
      "nori_analyzer_index": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": [
          "nori_readingform",
          "edge_ngram_filter",
          "lowercase_filter"
        ]
      },
      "nori_analyzer_search": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": [
          "nori_readingform",
          "edge_ngram_filter",
          "lowercase_filter"
        ]
      }
    }
  }
}